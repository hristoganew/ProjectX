<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.IntroActivity"
    android:orientation="vertical"
    android:background="@drawable/blue_gradient_background">

    <android.support.v4.view.ViewPager
        android:id="@+id/intro_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="164dp"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_below="@+id/intro_view_pager"
        android:layout_marginTop="-164dp"
        android:gravity="center">

        <Button
            android:id="@+id/get_started_button"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="@drawable/yellow_button_background"
            android:onClick="getStarted"
            android:text="Get Started"
            android:textStyle="bold"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/intro_dot_layout"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="center">
    </LinearLayout>

</RelativeLayout>